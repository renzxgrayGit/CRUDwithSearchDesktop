@{
}

@model WebApplication1.Models.Entities.Student

<h1 class="mt-5 mb-4">Edit Student</h1>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mb-3">
            <label for="Id" class="form-label">Id</label>
            <input type="text" class="form-control" id="Id" placeholder="Enter Id" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <input type="text" class="form-control" id="Name" placeholder="Enter Name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" placeholder="Enter Email" asp-for="Email" />
        </div>
        <div class="mb-3">
            <label for="Phone" class="form-label">Phone</label>
            <input type="text" class="form-control" id="Phone" placeholder="Enter Phone" asp-for="Phone" />
        </div>
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/Students/Delete?id=@Model.Id" class="btn btn-danger ms-3" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
        </div>
    </form>
}

